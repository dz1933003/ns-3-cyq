# def configure(conf):
#     conf.check_nonfatal(header_name='stdint.h', define_name='HAVE_STDINT_H')

def build(bld):
    module = bld.create_ns3_module('rdma', ['core'])
    module.source = [
        'model/rdma.cc',
        'model/rdma-tx-queue-pair.cc',
        'helper/rdma-helper.cc',
        ]

    module_test = bld.create_ns3_module_test_library('rdma')
    module_test.source = [
        'test/rdma-test-suite.cc',
        ]

    headers = bld(features='ns3header')
    headers.module = 'rdma'
    headers.source = [
        'model/rdma.h',
        'model/rdma-tx-queue-pair.h',
        'helper/rdma-helper.h',
        ]

    if bld.env.ENABLE_EXAMPLES:
        bld.recurse('examples')

    # bld.ns3_python_bindings()

